<!--                    <GradientStop Color="#5950D192" Offset="0.819" />-->
<!--                    <GradientStop Color="#2379F2DB" Offset="1" />-->
<!--                    <GradientStop Color="#1C61D8AB" Offset="0.609" />-->
<!--                </RadialGradientBrush>-->
<!--            </Ellipse.Stroke>-->
<!--        </Ellipse>-->
        <Viewbox Margin="10">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Hello Wpf</TextBlock>
        </Viewbox>
    </Grid>
</UserControl>
